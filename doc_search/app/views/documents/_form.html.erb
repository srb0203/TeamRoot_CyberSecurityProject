<%= form_for(@document) do |f| %>
  <% if @document.errors.any? %>
    <div id="error-messages">
      <h5>One or more required fields are invalid and hence prohibited the document from being saved.</h5>
    </div>
    <br>
  <% end %>
  
  <div class="field">
    <%= f.label :title_ %><span id="required-field">*</span><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author_ %><span id="required-field">*</span><br>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :doctype_ %><span id="required-field">*</span><br>
    <%= f.text_field :doctype %>
  </div>
  <div class="field">
    <%= f.label :category_ %><span id="required-field">*</span><br>
    <%= f.text_field :category %>
  </div>
  <div class="field">
    <%= f.label :pdflink_ %><span id="required-field">*</span><br>
    <%= f.text_area :pdflink %>
  </div>
  <div class="actions">
    <%= f.submit %><span>  (* = required)</span>
  </div>
<% end %>
